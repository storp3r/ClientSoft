<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
   <children>
      <Pane layoutY="-3.0" prefHeight="113.0" prefWidth="600.0" styleClass="homeTopPane" stylesheets="@styles/Styles.css">
         <children>
            <Label fx:id="loginWindowLabel" layoutX="28.0" layoutY="21.0" text="LOG IN">
               <font>
                  <Font name="Arial" size="36.0" />
               </font>
               <styleClass>
                  <String fx:value="mainText" />
                  <String fx:value="usernameText" />
               </styleClass>
            </Label>
         </children>
      </Pane>
      <Pane layoutY="110.0" prefHeight="290.0" prefWidth="600.0" styleClass="homeMainPane" stylesheets="@styles/Styles.css">
         <children>
            <Label fx:id="usernameLabel" layoutX="169.0" layoutY="30.0" text="Username" textFill="#50514f">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" layoutX="170.0" layoutY="56.0" prefHeight="33.0" prefWidth="245.0" />
            <Label fx:id="passwordLabel" layoutX="169.0" layoutY="116.0" text="Password" textFill="#50514f">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
            </Label>
            <javafx.scene.control.PasswordField fx:id="passwordField" layoutX="170.0" layoutY="138.0" prefHeight="33.0" prefWidth="245.0" />
            <Button fx:id="loginButton" layoutX="210.0" layoutY="202.0" maxHeight="50.0" maxWidth="250.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="50.0" prefWidth="250.0" stylesheets="@styles/Styles.css" text="LOG IN">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
               <styleClass>
                  <String fx:value="loginButton" />
                  <String fx:value="viewButtons" />
               </styleClass>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
